<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please choose the device purpose:"
        android:id="@+id/textView11"
        android:layout_weight="0.23"
        android:textSize="40dp" />

    <Button
        android:layout_width="300px"
        android:layout_height="150px"
        android:text="Monitor"
        android:id="@+id/monitorButton"
        android:background="#ffad2336"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/sensorButton"
        android:layout_alignStart="@+id/sensorButton"
        android:onClick="onMonitorClick"/>

    <Button
        android:layout_width="300px"
        android:layout_height="150px"
        android:text="Sensor"
        android:id="@+id/sensorButton"
        android:layout_marginTop="46dp"
        android:background="#ff2f4eff"
        android:layout_below="@+id/monitorButton"
        android:layout_centerHorizontal="true"
        android:onClick="onSensorClick"/>






</RelativeLayout>



