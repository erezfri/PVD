<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MonitorActivity"
    android:id="@+id/monitor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please make sure your bluetooth is on. "
        android:id="@+id/textView11"
        android:layout_weight="0.23"
        android:textSize="30dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/searchButton" />

    <Button
        android:layout_width="400px"
        android:layout_height="200px"
        android:text="Search for device"
        android:id="@+id/searchButton"
        android:background="#ffad7c12"
        android:layout_centerVertical="true"
        android:onClick="onSearchButtonClick"/>

    <LinearLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/searchButton"
        android:layout_toLeftOf="@+id/bluetoothList"
        android:layout_toStartOf="@+id/bluetoothList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monitor Mode"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothList"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/searchButton"
        android:layout_toEndOf="@+id/searchButton"
        android:layout_above="@+id/imageView2" />


</RelativeLayout>



